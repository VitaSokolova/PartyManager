<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_add_party"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.vsu.nastya.partymanager.AddPartyActivity">

    <EditText
        android:id="@+id/addparty_name_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/partyName"

        android:paddingBottom="20dp"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/addparty_date_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_date_range_black_48dp"
            android:text="Дата"
            android:background="?android:attr/colorBackground" />

        <TextView
            android:id="@+id/addparty_date_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:paddingLeft="30dp"
            android:paddingStart="30dp"
            android:layout_gravity="center_vertical"
            android:text="text"
            android:textSize="18sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/addparty_time_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Время"
            android:src="@drawable/ic_schedule_black_48dp"
            android:background="?android:attr/colorBackground"/>

        <TextView
            android:id="@+id/addparty_time_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:paddingLeft="30dp"
            android:paddingStart="30dp"
            android:text="text"
            android:layout_gravity="center_vertical"
            android:textSize="18sp" />

    </LinearLayout>

    <Button
        android:id="@+id/addparty_ok_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OK"
        android:layout_marginTop="25dp"
        android:layout_gravity="center"/>

</LinearLayout>
